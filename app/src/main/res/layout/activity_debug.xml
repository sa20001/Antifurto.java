<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zzz.despair.progetto_antifurto.Debug">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tint="#CCC7C7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467"
        app:srcCompat="@drawable/ic_supersu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <TextView
            android:id="@+id/textView_toggle_functions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:text="Toggle functions" />

        <Switch
            android:id="@+id/switch_tab_sensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:textSize="18sp"
            android:enabled="true"
            android:checked="true"
            android:text="Tab Sensori" />

        <Switch
            android:id="@+id/switch_tab_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:enabled="true"
            android:checked="true"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Tab Log" />

        <Switch
            android:id="@+id/switch_tab_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:enabled="true"
            android:checked="true"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Tab About" />

        <TextView
            android:id="@+id/textView_toggle_windows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Toggle sensors"
            android:textColor="@color/text_color"
            android:textSize="30sp"
             />

        <Switch
            android:id="@+id/switch_win1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Sensore Finestra 1" />

        <Switch
            android:id="@+id/switch_win2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Sensore Finestra 2" />

        <Switch
            android:id="@+id/switch_win3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Sensore Finestra 3" />

        <Switch
            android:id="@+id/switch_win4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Sensore Finestra 4" />

        <Switch
            android:id="@+id/switch_door"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Sensore porta"
            android:textColor="@color/text_color"
            android:textSize="18sp" />
        <Switch
            android:id="@+id/switch_motion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Sensore di movimento"
            android:textColor="@color/text_color"
            android:textSize="18sp" />
        <Switch
            android:id="@+id/switch_siren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Sirena"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_apply_toggle_sensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applica Toggle sensors" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>